{{attach_library('behavioursoe/layout')}}

<div{{ attributes.addClass('simple-layout', 'clearfix lout-3') }}>

  {{ title_suffix.contextual_links }}  

  {% if row1 or row2 %}
    <div class="top-wrp">
      <div{{ row1_attributes.addClass('row1', 'sl-row row1') }}>
        <div class="inside container">          
          {% if row1 %}{{ row1 }}{% endif %}
          {% if row2 %}
            <div{{ row2_attributes.addClass('row2', 'sl-row row2') }}>
              <div class="inside container">{{ row2 }}</div>
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  {% endif %}

  {% if row3 %}
    <div{{ row3_attributes.addClass('row3', 'sl-row row3') }}><div class="inside container">{{ row3 }}</div></div>
  {% endif %}

